<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@drawable/toobar_bg"
    android:padding="5dp"
    android:layout_marginBottom="@dimen/text_input_margin_bottom">
    <com.jinminetics.views.JTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Change Password"
        style="@style/Button.Medium"
        android:layout_toRightOf="@id/cancel"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/change"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_check_accent_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <ProgressBar
        android:id="@+id/changeProgressBar"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>